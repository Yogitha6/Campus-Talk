<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
 
 <hibernate-mapping>
 	<class name="com.campusTalk.model.Topic" table="topic">
 	<id name="topicId" column="topicId" type="int">
 		<generator class="native"/>
 	</id>
 	<property name="topicDescription" column="description" type="string"></property>
 	<property name="areaId" column="areaId" type="int"></property>
 	</class>
 </hibernate-mapping>